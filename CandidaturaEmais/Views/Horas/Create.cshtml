@model CandidaturaEmais.Models.Hora

@{
    ViewData["Title"] = "Novo Registo";
    ViewData["Subtitle"] = "Hora";

    ViewData["Submit"] = "Submeter";

    ViewData["Go Back"] = "Voltar";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Subtitle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label"></label>
                <input asp-for="HoraFim" class="form-control" />
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorId" class="control-label"></label>
                <input asp-for="UtilizadorId" class="form-control" />
                <span asp-validation-for="UtilizadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Submit"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@ViewData["Go Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
