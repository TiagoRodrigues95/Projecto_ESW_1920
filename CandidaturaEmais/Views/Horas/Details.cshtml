@model CandidaturaEmais.Models.Hora

@{
    ViewData["Title"] = "Detalhes";
    ViewData["Subtitle"] = "Hora";

    ViewData["Edit"] = "Alterar";

    ViewData["Go Back"] = "Voltar";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@ViewData["Subtitle"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UtilizadorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HoraId">@ViewData["Edit"]</a> |
    <a asp-action="Index">@ViewData["Go Back"]</a>
</div>
