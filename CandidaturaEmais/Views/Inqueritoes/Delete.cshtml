@model CandidaturaEmais.Models.Inquerito

@{
    ViewData["Title"] = "Eliminar";
    ViewData["Subtitle"] = "Inquérito";

    ViewData["Delete"] = "Eliminar";

    ViewData["Go Back"] = "Voltar";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewData["Subtitle"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoLetivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoLetivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InqueritoId" />
        <input type="submit" value="@ViewData["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@ViewData["Go Back"]</a>
    </form>
</div>
