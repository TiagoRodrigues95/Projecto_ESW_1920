@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        
            <style>
                    /* Always set the map height explicitly to define the size of the div
                * element that contains the map. */
                    #map {
                        height: 400px;
                        width: 700px;
                        margin-left: auto;
                    }
            </style>

            <div class="row" >
                    <div id="map" ></div>
                </div>
                    <script>
                        var map;
                        var marker;
                        function initMap() {
                            map = new google.maps.Map(document.getElementById('map'), {
                                center: { lat: 38.736946, lng: -9.142685 },
                                zoom: 8.5
                            });
                            marker = new google.maps.Marker({
                                position: { lat: 38.7246535, lng: -9.15732 },
                                map: map,
                                icon: {
                                          url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"
                                      }
                            });

                            marker = new google.maps.Marker({
                                position: { lat: 38.5235164, lng: -8.8947293 },
                                map: map,
                                icon: {
                                          url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png"
                                      }
                            });

                            marker = new google.maps.Marker({
                                position: { lat: 38.771592, lng: -9.097812 },
                                map: map
                            });

                        }
                    </script>
                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAuyoUM2HoU0jM9514q7AXV8cWWlOMgFZg&callback=initMap"
                            async defer></script>  
    </div>
